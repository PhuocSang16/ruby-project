<h1>
  <center>DANH SÁCH BẠN BÈ</center>
</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Họ và tên</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Sinh nhật</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.Ho_va_ten %></td>
        <td><%= friend.Email %></td>
        <td><%= friend.Phone %></td>
        <td><%= friend.Sinh_nhat %></td>
        <td><%= link_to "Xem thông tin", friend, class:"btn btn-primary" %></td>
    <% end %>
  </tbody>
</table>
<%= link_to "Thêm bạn mới", new_friend_path, class:"btn btn-secondary" %>
